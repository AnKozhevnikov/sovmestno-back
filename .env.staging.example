# Staging Environment Configuration
# Copy this file to .env on staging server and fill with actual values

# Environment (staging or production)
ENVIRONMENT=staging

# Domain Configuration
DOMAIN=api.sovmestno-test.ru

# PostgreSQL
POSTGRES_DB=sovmestno_staging_db
POSTGRES_USER=sovmestno_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Database connection for services
DB_DSN=postgres://sovmestno_user:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/sovmestno_staging_db?sslmode=disable

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_MINIO_PASSWORD_HERE
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=CHANGE_ME_STRONG_MINIO_PASSWORD_HERE

# Gateway
GATEWAY_PORT=8080
GIN_MODE=release
API_HOST=api.sovmestno-test.ru
# Allow frontend domain (main domain, not API subdomain)
ALLOWED_ORIGINS=https://sovmestno-test.ru,https://www.sovmestno-test.ru

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Admin Secret Key (generate with: openssl rand -base64 32)
ADMIN_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Microservices
USER_SERVICE_PORT=8081
USER_SERVICE_URL=http://user-service:8081

EVENT_SERVICE_PORT=8082
EVENT_SERVICE_URL=http://event-service:8082

APPLICATION_SERVICE_PORT=8083
APPLICATION_SERVICE_URL=http://application-service:8083

# SSL Email for Let's Encrypt
SSL_EMAIL=your-email@example.com
